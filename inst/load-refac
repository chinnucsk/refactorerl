
(add-to-list 'exec-path (concat erlang-root-dir "/bin"))
(add-to-list 'load-path
             (concat (car (directory-files
                           (concat erlang-root-dir "/lib") t "^tools-.*"))
                     "/emacs") )

(require 'erlang-start)

(add-to-list 'load-path (concat refactorer-base-dir "/distel/elisp"))
(require 'distel)
(setq erl-nodename-cache
      (intern (concat "refactorerl@" (car (split-string (shell-command-to-string "hostname"))))))

(add-to-list 'load-path (concat refactorer-base-dir "/refactor"))
(require 'refactor)
(refactor-init)
